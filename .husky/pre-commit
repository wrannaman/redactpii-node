#!/usr/bin/env sh

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for staged files (formatting, linting)
echo "ğŸ“ Running lint-staged (formatting & linting staged files)..."
pnpm exec lint-staged

# Run full typecheck (catches cross-file issues)
echo "ğŸ” Running TypeScript typecheck..."
pnpm run typecheck || {
  echo "âŒ Typecheck failed! Fix type errors before committing."
  exit 1
}

# Run all tests (ensures nothing broke)
echo "ğŸ§ª Running test suite..."
pnpm test || {
  echo "âŒ Tests failed! Fix failing tests before committing."
  exit 1
}

echo "âœ… All pre-commit checks passed!"
